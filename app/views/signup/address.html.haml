.registration-header
  .registration-header__top
    = link_to root_path, class: "link" do
      = image_tag "mercari_widelogo.png",class:"registration-header__top__image"
  .wizard
    %ul.wizard__texts
      %li.wizard__texts__process
        会員情報　
      %li.wizard__texts__process
        電話番号認証
      %li.wizard__texts__process.red
        お届け先住所入力
      %li.wizard__texts__process
        支払い方法　　　
      %li.wizard__texts__process
        完了
    %ul.wizard__bar
      %li.wizard__bar__ball.red
      %li.wizard__bar__line.red
      %li.wizard__bar__ball.red
      %li.wizard__bar__line.red
      %li.wizard__bar__ball.red
      %li.wizard__bar__line
      %li.wizard__bar__ball
      %li.wizard__bar__line
      %li.wizard__bar__ball
.address
  .address__box
    .address__box__top
      住所入力
    .address__box__main
      = form_for creditcard_signup_index_path, method: :post do |f|
        .address__box__main__form
          =f.label :'郵便番号', class: 'address__box__main__form__label', for: "postcode-field"
          %span.address__box__main__form__label__require
            必須
          =f.text_field :postcode,class:"address__box__main__form__input", placeholder:"例）123-4567", id:"postcode-field"
        .address__box__main__form
          =f.label :"都道府県", class:"address__box__main__form__label", for:"prefecture-field"
          %span.address__box__main__form__label__require
            必須
          = f.collection_select :prefecture_id, Prefecture.all, :id, :name, id:"prefecture_field"
        .address__box__main__form
          =f.label :"市町村", class:"address__box__main__form__label", for:"city-field"
          %span.address__box__main__form__label__require
            必須
          =f.text_field :city ,class:"address__box__main__form__input",placeholder:"例）横浜市緑区", id:"city-field"
        .address__box__main__form
          =f.label :"番地",class:"address__box__main__form__label", for:"street-field"
          %span.address__box__main__form__label__require
            必須
          =f.text_field :street ,class:"address__box__main__form__input",placeholder:"例）青山1-1-1", id:"street-field"
        .address__box__main__form
          =f.label :"建物名", class:"address__box__main__form__label", for:"building-field"
          %span.address__box__main__form__label__optional
            任意
          =f.text_field :buidling_name ,class:"address__box__main__form__input",placeholder:"例）柳ビル103", id:"building-field"
        .address__box__main__form
          =f.label :"電話番号" ,class:"address__box__main__form__label", for:"phone-number-field"
          %span.address__box__main__form__label__optional
            任意
          =f.text_field :phone_number ,class:"address__box__main__form__input",placeholder:"例）09012345678", id:"phone-number-field"
        =f.submit class: "address__box__main__next", value: ',次へ進む'
=render 'shared/grayfooter'