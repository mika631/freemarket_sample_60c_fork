-# 幅が一番広い場合

%header
  .topbar
    .topbar__main
      %h1.topbar__main__icon
        = link_to root_path do
          = image_tag "mercari_widelogo.png", alt: "Mercari", class: "topbar__main__icon--logo"
      .topbar__main__search
        %form{class: 'topbar__main__search__form'}
          %input{placeholder: "何かお探しですか？", class: 'topbar__main__search__form--folder'}
          %button{class: 'topbar__main__search__form--push'}
            = link_to '#' do
              = fa_icon 'search', class: 'icon'
    .topbar__under
      %ul.topbar__under__left
        %li.topbar__under__left__choice{id: :search}
          %h2.topbar__under__left__choice__example
            = link_to categories_path, class: "link" do
              = fa_icon 'list-ul', class: 'icons'
              カテゴリーから探す
          = render 'shared/category-list'
        %li.topbar__under__left__choice
          %h2.topbar__under__left__choice__example
            = link_to '#', class: "link" do
              = fa_icon 'tag', class: 'icons'
              ブランドから探す
          %ul.topbar__under__left__choice__example__list
            %li.topbar__under__left__choice__example__list__type
              = link_to '#', class: 'category_first' do
                シャネル
            %li.topbar__under__left__choice__example__list__type
              = link_to '#', class: 'category_first' do
                ナイキ
            %li.topbar__under__left__choice__example__list__type
              = link_to '#', class: 'category_first' do
                ルイ ヴィトン
            %li.topbar__under__left__choice__example__list__type
              = link_to '#', class: 'category_first' do
                シュプリーム
            %li.topbar__under__left__choice__example__list__type
              = link_to '#', class: 'category_first' do
                アディダス
            %li.topbar__under__left__choice__example__list__type
              = link_to '#', class: 'category_first' do
                ブランド一覧
      %ul.topbar__under__right
        - if user_signed_in?
          %li.topbar__under__right__contents
            %h2.topbar__under__right__contents__user
              = link_to '#', class: 'link' do
                = fa_icon 'heart', class: 'mark'
                いいね！一覧
          %li.topbar__under__right__contents
            %h2.topbar__under__right__contents__user
              = link_to '#', class: 'link' do
                = fa_icon 'bell', class: 'mark'
                お知らせ
          %li.topbar__under__right__contents
            %h2.topbar__under__right__contents__user
              = link_to '#', class: 'link' do
                = fa_icon 'check', class: 'mark'
                やることリスト
          %li.topbar__under__right__contents
            %h2.topbar__under__right__contents__user
              = link_to user_path(current_user), class: 'link' do
                = fa_icon 'user', class: 'mark'
                マイページ
        - else
          %li.topbar__under__right__contents
            = link_to signup_index_path, class: "link" do
              .topbar__under__right__contents__list
                .topbar__under__right__contents__list--text-red 新規会員登録
          %li.topbar__under__right__contents
            = link_to new_user_session_path, class: "login" do
              ログイン

